{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "removeComments": true,
    "types": ["node"],
    "lib": ["ES2020", "DOM"], // vue/vetur needs this
    "skipLibCheck": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "cdk.out",
    ".ref/**",
    "**/dist",
    "**/__*"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "strict": false,
      "allowJs": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "skipLibCheck": true
    }
  }
}
