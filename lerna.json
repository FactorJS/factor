{
  "version": "1.0.0-beta.15",
  "npmClient": "yarn",
  "useWorkspaces": false,
  "conventionalCommits": true,
  "packages": [
    "@factor/*",
    "@plugins/*",
    "@themes/*"
  ],
  "command": {
    "publish": {
      "npmClient": "npm",
      "message": "chore(release): publish"
    },
    "init": {
      "exact": true
    },
    "version": {
      "message": "chore(release): version"
    }
  },
  "changelog": {
    "labels": {
      "feat": "New Feature",
      "fix": "Bug Fix",
      "docs": "Documentation",
      "perf": "Performance",
      "refactor": "Code Refactoring"
    }
  }
}
