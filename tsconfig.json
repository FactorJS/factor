{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "esnext",
    "module": "commonjs",
    "resolveJsonModule": true,
    "strict": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["test/modules/alias/*"],
      "@/*": ["test/modules/alias/*"],
      "#/*": ["test/modules/alias/*"]
    }
  },
  "exclude": [
    "**/dist",
    "reports",
    "coverage",
    "**/prism.js",
    "**/iconfont.js",
    "**/.ref",
    "**/*.vue"
  ]
}
