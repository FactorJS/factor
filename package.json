{
  "name": "factor",
  "version": "5.4.11",
  "devDependencies": {
    "@factor/api": "workspace:5.4.11",
    "@factor/lint": "workspace:5.4.11",
    "@factor/site": "workspace:5.4.11",
    "@factor/ui": "workspace:5.4.11",
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "c8": "^7.11.3",
    "chalk": "^5.0.1",
    "concurrently": "^7.2.2",
    "dotenv": "^16.0.1",
    "eslint": "^8.18.0",
    "happy-dom": "^5.3.4",
    "jsdom": "*",
    "nodemon": "^2.0.18",
    "npm-package-json-lint": "^6.3.0",
    "playwright": "*",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.4",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "vite": "*",
    "vitest": "*",
    "vue": "*",
    "yorkie": "^2.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "gitHooks": {
    "commit-msg": "ts-node scripts/verify-commit.mjs"
  },
  "license": "MIT",
  "main": "index.ts",
  "pnpm": {
    "overrides": {
      "vite": "*",
      "vue": "*"
    }
  },
  "private": true,
  "publishConfig": {},
  "scripts": {
    "lf": "cross-env INSTALL_ENV=production pnpm i --lockfile-only",
    "build-site": "npm run in && npm exec -w @factor/site -- factor run prerender",
    "in": "npx pnpm i -r --store=node_modules/.pnpm-store --frozen-lockfile",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "clean-install": "pnpm clear-modules && rm pnpm-lock.yaml && pnpm i && pnpm up -r && pnpm outdated",
    "clear-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "deploy": "pnpm release && pnpm push-release",
    "dev": "pnpm --filter @factor/site exec -- factor dev",
    "pack": "pnpm --filter @factor/api/build exec -- factor pack",
    "prerender": "pnpm exec --filter @factor/site -- factor prerender",
    "release": "npm exec -- factor run release --patch --skip-tests",
    "site": "pnpm --filter @factor/site exec -- factor run rdev --app-port 3232 --server-port 21212",
    "test": "pnpm run test-unit && pnpm run test-lint",
    "fix": "pnpm run fix-deps && pnpm run fix-format",
    "fix-deps": "syncpack fix-mismatches",
    "fix-format": "pnpm prettier --ext .ts,.js,.vue,.json . --write",
    "test-eslint": "pnpm exec -- eslint --ext .ts,.js @factor/.",
    "test-lint": "pnpm run test-pkg && pnpm run test-types && pnpm run test-eslint && pnpm run test-vue",
    "test-pkg": "pnpm exec -- npmPkgJsonLint . && pnpm run fix-deps",
    "test-types": "tsc --skipLibCheck --excludeDirectories node_modules",
    "test-unit": "npm exec -- vitest run",
    "test-vue": "pnpm exec -- eslint --ext .vue @factor/.",
    "up": "docker-compose up",
    "up-dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up"
  },
  "type": "module",
  "workspaces": [
    "@factor/*"
  ],
  "dependencies": {
    "cross-env": "^7.0.3",
    "pnpm": "^7.4.0"
  }
}
