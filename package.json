{
  "name": "factor",
  "version": "^4.0.0",
  "scripts": {
    "deploy": "pnpm release && pnpm push-release",
    "site": "pnpm --filter @factor/site exec -- factor dev --inspector",
    "release": "pnpm exec factor release",
    "pack": "pnpm exec -w @factor/build factor pack",
    "dev": "pnpm exec -w @factor/site factor dev",
    "test": "pnpm run test-lint && pnpm run test-unit",
    "test-unit": "pnpm exec vitest run",
    "test-lint": "pnpm run test-types && pnpm run test-eslint",
    "test-vue": "eslint --ext .vue @core/. @apps/. @plugins/.",
    "test-eslint": "LINT_ENV=basic eslint --ext .ts,.js @core/. @apps/. @plugins/.",
    "test-types": "tsc --skipLibCheck --excludeDirectories node_modules",
    "format-all": "pnpm prettier --ext .ts,.js,.vue,.json . --write",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "up": "docker-compose up",
    "up-dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up"
  },
  "license": "MIT",
  "workspaces": [
    "@core/*",
    "@engine/*",
    "@apps/*",
    "@plugins/*",
    "@test/*",
    "cdk"
  ],
  "private": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "gitHooks": {
    "pre-push": "git pull && npm run test",
    "commit-msg": "ts-node scripts/verify-commit.mjs"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.16",
    "chalk": "^5.0.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "sirv": "^2.0.2",
    "tailwindcss-cli": "^0.1.2",
    "tslib": "^2.3.1",
    "vite": "^2.7.13",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "@factor/cli": "^4.0.0",
    "@factor/test": "^4.0.0",
    "@factor/site": "^4.0.0",
    "autoprefixer": "^10.4.2",
    "c8": "^7.11.0",
    "postcss": "^8.4.6",
    "tailwindcss": "^3.0.19",
    "typescript": "^4.5.5"
  }
}
