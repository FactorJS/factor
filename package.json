{
  "name": "factor",
  "version": "5.2.5",
  "main": "index.ts",
  "publishConfig": {},
  "type": "module",
  "scripts": {
    "prerender": "pnpm exec --filter @factor/site -- factor prerender",
    "deploy": "pnpm release && pnpm push-release",
    "site": "pnpm --filter @factor/site exec -- factor dev --port-app 3232",
    "release": "pnpm exec -- factor release",
    "pack": "pnpm --filter @factor/api/build exec -- factor pack",
    "dev": "pnpm --filter @factor/site exec -- factor dev",
    "test": "pnpm run test-unit && pnpm run test-lint",
    "test-pkg": "pnpm exec -- npmPkgJsonLint .",
    "test-unit": "pnpm exec -- vitest run",
    "test-lint": "pnpm run test-pkg && pnpm run test-types && pnpm run test-eslint && pnpm run test-vue",
    "test-vue": "pnpm exec -- eslint --ext .vue packages/.",
    "test-eslint": "pnpm exec -- eslint --ext .ts,.js packages/.",
    "test-types": "tsc --skipLibCheck --excludeDirectories node_modules",
    "format-all": "pnpm prettier --ext .ts,.js,.vue,.json . --write",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "up": "docker-compose up",
    "up-dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "clear-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean-install": "pnpm clear-modules && rm pnpm-lock.yaml && pnpm install"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "gitHooks": {
    "commit-msg": "ts-node scripts/verify-commit.mjs"
  },
  "devDependencies": {
    "@factor/api": "5.2.5",
    "@factor/lint": "5.2.5",
    "@factor/site": "5.2.5",
    "@factor/ui": "5.2.5",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.25",
    "@vitejs/plugin-vue": "^2.3.1",
    "autoprefixer": "^10.4.4",
    "c8": "^7.11.2",
    "chalk": "^5.0.1",
    "concurrently": "^7.1.0",
    "eslint": "^8.13.0",
    "happy-dom": "^2.55.0",
    "jsdom": "^19.0.0",
    "nodemon": "^2.0.15",
    "npm-package-json-lint": "^6.3.0",
    "playwright": "^1.21.1",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.24",
    "tslib": "^2.4.0",
    "typescript": "^4.6.3",
    "vite": "^2.9.5",
    "vitest": "^0.9.4",
    "vue": "^3.2.33",
    "yorkie": "^2.0.0"
  },
  "pnpm": {
    "overrides": {
      "@factor/api": "workspace:*",
      "@factor/site": "workspace:*",
      "@factor/ui": "workspace:*",
      "@factor/lint": "workspace:*"
    }
  }
}
