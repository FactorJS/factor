{
  "compilerOptions": {
    "paths": {
      "@ROOT_COMPONENT_ALIAS": ["../site/src/App.vue"],
      "@ROUTES_ALIAS/*": ["../site/src/routes.ts"]
    },
    "useDefineForClassFields": true,
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "types": ["node"],
    "lib": ["ESNext", "DOM"], // vue/vetur needs this
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "inlineSourceMap": true
  },
  "exclude": [
    "node_modules/!(@factor)/**/*",
    "**/node_modules/!(@factor)/**/*",
    "cdk.out",
    ".ref/**",
    "dist",
    "**/dist/*",
    "**/__*",
    "__*",
    ".git"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "strict": false,
      "allowJs": true,
      "module": "ESNext",
      "esModuleInterop": true,
      "skipLibCheck": true
    }
  }
}
